{
	"plugins": ["@prettier/plugin-php"],
	"tabWidth": 2,
	"useTabs": false,
	"trailingComma": "es5",
	"printWidth": 120,
	"semi": true,
	"singleQuote": true,
	"bracketSpacing": true,
	"htmlWhitespaceSensitivity": "ignore",
	"overrides": [
		{
			"files": "*.yml",
			"options": {
				"tabWidth": 2
			}
		},
		{
			"files": "*.md",
			"options": {
				"trailingComma": "es5"
			}
		},
		{
			"files": "*.php",
			"options": {
				"parser": "php"
			}
		}
	]
}
